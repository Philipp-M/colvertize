{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "lib": ["DOM", "ES6", "DOM", "ScriptHost"],
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
